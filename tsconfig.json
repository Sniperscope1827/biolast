{
  "compilerOptions": {
    "target": "ES6",
	"lib": ["ES2019"],
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"],
  "ts-node": {
	  "files": true
  }
}
